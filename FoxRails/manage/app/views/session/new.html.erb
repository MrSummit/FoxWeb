<div>
	<%if flash[:alert]%>
	<p><%=flash[:alert]%></p>
	<%end%>

	<%=form_tag do%>
	<fieldset>
		<legend>Please Log In</legend>
		<div>
			<label for="name">number:</label>
			<%=text_field_tag :number,params[:number]%>
		</div>
		<div>
			<label for="password">Password:</label>
			<%=password_field_tag :pswd,params[:pswd]%>
		</div>
		<div>
			<%=submit_tag "Login"%>
		</div>
	</fieldset>
	<%end%>
</div>